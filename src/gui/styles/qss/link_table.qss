/* 连接表格样式表 - 亮色主题 */
QTableWidget {
    background-color: transparent;
    alternate-background-color: rgba(0, 0, 0, 0.02);
    gridline-color: transparent;
    border: none;
    outline: none;
}

QHeaderView::section {
    background-color: transparent;
    border: none;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    padding: 8px;
}
