/* 连接表格样式表 - 暗色主题 */
QTableWidget {
    background-color: transparent;
    alternate-background-color: rgba(255, 255, 255, 0.03);
    gridline-color: transparent;
    border: none;
    outline: none;
}

QHeaderView::section {
    background-color: transparent;
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    padding: 8px;
}
